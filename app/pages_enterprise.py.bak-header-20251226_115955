        (5, "Datenlokation EU", "SaaS", "success", "Niedrig", 21),
        (6, "Eigentums√ºbergang", "Kaufvertrag", "success", "Niedrig", 19),
        (7, "Vertragsstrafe 10%", "Lieferant", "warning", "Mittel", 15),
