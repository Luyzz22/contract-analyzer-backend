def get_library_page(user_name: str = "User"):
    clauses = [
        (1, "K√ºndigungsklausel Standard", "Allgemein", "success", "Niedrig", 47),
        (2, "Haftungsbegrenzung 1x ACV", "SaaS", "warning", "Mittel", 32),
